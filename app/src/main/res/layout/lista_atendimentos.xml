<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="alphacallapp.com.br.alphacallapp.Menu_Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f0f0f0">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:text="NÂ°"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#4d4d4d"/>

        <TextView
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="12dp"
            android:text="Cliente"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#4d4d4d"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lista_txt_data_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="right"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Data inicial"
                android:textColor="#4d4d4d"/>

            <TextView
                android:id="@+id/lista_txt_hora_con"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="Hora inicial"
                android:textColor="#4d4d4d"/>


        </LinearLayout>

    </LinearLayout>


    <ListView
        android:id="@+id/ListaAtt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
